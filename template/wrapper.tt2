<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

    <title>Recollect - the simple solution to remembering garbage day.</title>
    <meta name="description" content="Recollect is a simple solution to remembering garbage and recycling collection days.">
    <meta name="author" content="Recollect - David Eaves, Kevin Jones and Luke Closs">
    <meta name="keywords" content="[% keywords.join(',') %]">

    <meta name="viewport" content="width=device-width, maximum-scale=1.0" />

    <link rel="apple-touch-icon" href="/apple-touch-icon.png">

    <link rel="stylesheet" href="/[% version %]/css/recollect-compiled.css"/>

    <script type="text/javascript" src="/[% version %]/javascript/libs/modernizr-1.6.min.js"></script>
    <script type="text/javascript" src="http://www.google.com/recaptcha/api/js/recaptcha_ajax.js"></script>

    <!-- recollect stuff -->
    <script type="text/javascript" src="/[% version %]/javascript/compiled-recollect.jgz"></script>

    [% FOR js = javascript %]
    <script type="text/javascript" src="[% js %]"></script>
    [% END %]

    <!--[if lte IE 6]><script src="/[% version %]/javascript/libs/ie6/warning.js"></script><script>window.onload=function(){e("/[% version %]/javascript/libs/ie6/")}</script><![endif]-->
</head>

<body[% IF class %] class="[% class %]"[% END %]>
    [% UNLESS nobg %]
        <div id="background">
            <img src="/[% version %]/images/background.jpg"/>
        </div>
    [% END %]

    <header class="white">
        <div class="container_24">
            <div class="grid_7 social">
                [% INCLUDE elements/social.tt2 %]
            </div>
            <div class="grid_10 vpad5 center">
                <a title="Recollect Home" href="/" class="homeLink">Home</a>&middot;
                <a title="Frequently Asked Questions" href="/faq">Questions</a>&middot;
                <a title="About Us" href="/about">About Us</a>&middot;
                <a title="Parner" href="/partner">Partner</a>&middot;
                <a title="Tell a friend" href="/r/tell-a-friend" class="tell-a-friend">Tell a Friend</a>
            </div>
            <div class="grid_6 vpad5">
                <a title="Copyright" href="/copyright">&copy;2011</a>
                [% IF is_admin %]<a href="/radmin">RADmin</a>[% END %]
            </div>
            <div class="clear"></div>
        </div>
    </header>

    [% content %]

    <footer>
    </footer>

    <script>
        $(window).resize(function() {
            var $bg = $('#background');
            var $img = $bg.find('img');
            $bg.height($(this).height());

            // Keep the background fullscreen
            if ($(window).height() > $img.height()) {
                $img.css({height:'100%', width:'auto'});
            }
            if ($(window).width() > $img.width()) {
                $img.css({height:'auto', width:'100%'});
            }
        }).resize();
        $('#background img').load(function() { $(window).resize() });
    </script>

    <!--[if lt IE 7 ]>
        <script src="/[% version %]/javascript/libs/dd_belatedpng.js"></script>
        <script> DD_belatedPNG.fix('img, .png_bg'); </script>
    <![endif]-->

    <!-- yui profiler and profileviewer - remove for production
    <script src="/[% version %]/javascript/libs/profiling/yahoo-profiling.min.js"></script>
    <script src="/[% version %]/javascript/libs/profiling/config.js"></script>
         end profiling code -->

    [% INCLUDE elements/analytics %]
</body>
</html>
