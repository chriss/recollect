<?xml version="1.0" encoding="UTF-8"?>
<kml xmlns="http://www.opengis.net/kml/2.2">
  <Document>
    <name>Recollect Collection Zone - [% zone.title %]</name>
    <Style id="[% zone.colour_name %]">
      <LineStyle>
        <width>3</width>
        <color>[% zone.line_colour %]</color>
      </LineStyle>
      <PolyStyle>
        <color>[% zone.poly_colour %]</color>
      </PolyStyle>
    </Style>
    [% FOREACH poly IN zone.geom_polygons %]
    <Placemark>
      <name>[% zone.name %]</name>
      <description>[% zone.title %]</description>
      <styleUrl>#[% zone.colour_name %]</styleUrl>
      <Polygon>
        <outerBoundaryIs>
          <LinearRing>
            <coordinates>
              [% FOREACH point IN poly.points -%]
                [% point.lng %],[% point.lat %],0
              [% END %]
            </coordinates>
          </LinearRing>
        </outerBoundaryIs>
      </Polygon>
    </Placemark>
    [% END %]
  </Document>
</kml>
