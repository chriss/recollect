<!--[if (gt IE 9)|!(IE)]><!--> <html lang="en" class="no-js"> <!--<![endif]-->
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

    <title>Recollect - the simple solution to remembering garbage day.</title>
    <meta name="description" content="Recollect is a simple solution to remembering garbage and recycling collection days.">
    <meta name="author" content="Recollect - David Eaves, Kevin Jones and Luke Closs">
    <meta name="keywords" content="reminder,garbage,collection,trash,pickup,vancouver,toronto,edmonton,canada,victoria,north vancouver">

    <meta name="viewport" content="width=device-width, maximum-scale=1.0" />

    <link rel="apple-touch-icon" href="/apple-touch-icon.png">

    <link rel="stylesheet" href="/[% version %]/css/style.css"/>

    <script type="text/javascript" src="/[% version %]/javascript/libs/modernizr-1.6.min.js"></script>

    <!-- recollect stuff -->
    <script type="text/javascript" src="/[% version %]/javascript/compiled-recollect.jgz"></script>

    [% FOR js = javascript %]
    <script type="text/javascript" src="[% js %]"></script>
    [% END %]
</head>

<body[% IF class %] class="[% class %]"[% END %]>
    [% UNLESS nobg %]
        <img id="background" src="/[% version %]/images/background.jpg"/>
    [% END %]

    <div id="container">
        <header>
            <div id="links">
                <div class="white"></div>
                [% INCLUDE elements/links.tt2 %]
                [% INCLUDE elements/social.tt2 %]
            </div>
        </header>

        [% content %]

        <footer>
        </footer>
    </div> <!-- end of #container -->

    <script>
        $(window).resize(function() {
            // Keep the whitebar and content in the center
            $('#container').height( $(window).height() - 30 );

            // Keep the background fullscreen
            if ($(window).height() > $('#background').height()) {
                $('#background').css({height:'100%', width:'auto'});
            }
            if ($(window).width() > $('#background').width()) {
                $('#background').css({height:'auto', width:'100%'});
            }
        }).resize();
        $('#background').load(function() { $(window).resize() });

    </script>

    <!--[if lt IE 7 ]>
        <script src="/[% version %]/javascript/libs/dd_belatedpng.js"></script>
        <script> DD_belatedPNG.fix('img, .png_bg'); </script>
    <![endif]-->

    <!-- yui profiler and profileviewer - remove for production
    <script src="/[% version %]/javascript/libs/profiling/yahoo-profiling.min.js"></script>
    <script src="/[% version %]/javascript/libs/profiling/config.js"></script>
         end profiling code -->

    [% INCLUDE elements/analytics %]

    <!-- GetSatisfaction -->
    [% UNLESS nofeedback %]
    <script type="text/javascript" charset="utf-8">
        var is_ssl = ("https:" == document.location.protocol);
        var asset_host = is_ssl ? "https://s3.amazonaws.com/getsatisfaction.com/" : "http://s3.amazonaws.com/getsatisfaction.com/";
        document.write(unescape("%3Cscript src='" + asset_host + "javascripts/feedback-v2.js' type='text/javascript'%3E%3C/script%3E"));
    </script>

    <script type="text/javascript" charset="utf-8">
        var feedback_widget = new GSFN.feedback_widget({
            display: "overlay",  
            company: "vantrash",
            placement: "right",
            color: "#86c655",
            style: "idea"
        });
    </script>
    [% END %]
    
</body>
</html>
