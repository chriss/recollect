#!/usr/bin/perl
use strict;
use warnings;
use FindBin;
use lib "$FindBin::Bin/../lib";

my $command = shift;
die "USAGE: $0 <command>\n" unless $command;

my $db = $ENV{PGDATABASE};
if ($command eq 'recreate') {
    my $file = shift || "$FindBin::Bin/../data/recollect.dump";
    print "Re-creating database ...\n";
    system("dropdb $db");
    system("createdb -E UTF8 $db");
    system("psql -f $file");
}

exit;
