#!/bin/bash

BACKUP=backup
if [[ ! -d $BACKUP ]]; then
    mkdir $BACKUP
    cd $BACKUP;
    git init
    touch recollect.dump
    git add recollect.dump
    git commit -m 'initial commit'
    cd ..
fi

echo '.dump' | sqlite3 data/recollect.db > $BACKUP/recollect.dump
cd $BACKUP;
git commit -a -m 'backup'
